---
// Layout component for minimal academic portfolio
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Remzi Kaygusuz" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>Remzi Kaygusuz | Academic Portfolio</title>
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@5"
      rel="stylesheet"
      type="text/css"
    />

    <meta
      name="description"
      content="Academic portfolio of Remzi Kaygusuz, Professor of Economics at Durham University."
    />
  </head>
  <body
    class="bg-white text-gray-900 font-sans transition-colors duration-300 min-h-screen"
  >
    <header
      class="sticky top-0 z-30 w-full bg-white/80 backdrop-blur border-b border-gray-200 transition-colors duration-300"
    >
      <nav
        class="w-full max-w-7xl mx-auto px-6 py-4 flex items-center justify-between"
      >
        <!-- Left: Profile Photo + Name -->
        <div class="flex items-center gap-3">
          <img
            src="/remzikaygusuz.jpg"
            alt="Remzi Kaygusuz"
            class="w-9 h-9 rounded-full border border-gray-300 shadow-sm hidden sm:block"
          />
          <a
            href="/"
            class="text-lg font-semibold tracking-tight text-gray-900 dark:text-white"
          >
            Remzi Kaygusuz
          </a>
        </div>

        <!-- Right: Nav Links - Desktop -->
        <div class="hidden md:flex items-center gap-3">
          <a
            href="/"
            class="px-3 py-1 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors font-medium"
          >
            Home
          </a>
          <a
            href="/about"
            class="px-3 py-1 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors font-medium"
          >
            About Me
          </a>
          <a
            href="mailto:remzi.kaygusuz@durham.ac.uk"
            class="p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
            aria-label="Email"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="w-6 h-6 text-gray-700 dark:text-gray-300"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 8V8a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"
              ></path>
            </svg>
          </a>
          <a
            href="https://scholar.google.com/citations?user=2CZKt58AAAA"
            target="_blank"
            rel="noopener"
            class="p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors flex items-center"
            aria-label="Google Scholar"
          >
            <img
              src="/google-scholar.png"
              alt="Google Scholar"
              class="w-5 h-5"
            />
            <span class="ml-2 font-medium hidden sm:inline">Google Scholar</span
            >
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          aria-label="Toggle mobile menu"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="w-6 h-6 text-gray-700 dark:text-gray-300"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>
      </nav>

      <!-- Mobile Menu Dropdown -->
      <div
        id="mobile-menu"
        class="md:hidden hidden bg-white border-t border-gray-200"
      >
        <div class="px-6 py-4 space-y-3">
          <a
            href="/"
            class="block px-3 py-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors font-medium"
          >
            Home
          </a>
          <a
            href="/about"
            class="block px-3 py-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors font-medium"
          >
            About Me
          </a>
          <a
            href="mailto:remzi.kaygusuz@durham.ac.uk"
            class="flex items-center px-3 py-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="w-5 h-5 text-gray-700 dark:text-gray-300 mr-3"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 8V8a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"
              ></path>
            </svg>
            Email
          </a>
          <a
            href="https://scholar.google.com/citations?user=2CZKt58AAAA"
            target="_blank"
            rel="noopener"
            class="flex items-center px-3 py-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          >
            <img
              src="/google-scholar.png"
              alt="Google Scholar"
              class="w-5 h-5 mr-3"
            />
            Google Scholar
          </a>
        </div>
      </div>
    </header>
    <main class="max-w-3xl mx-auto px-4 py-12 sm:py-20">
      <slot />
    </main>

    <script>
      // Mobile menu toggle functionality
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', (event) => {
        if (!mobileMenuButton?.contains(event.target as Node) && !mobileMenu?.contains(event.target as Node)) {
          mobileMenu?.classList.add('hidden');
        }
      });

      // Close mobile menu when window is resized to desktop
      window.addEventListener('resize', () => {
        if (window.innerWidth >= 768) { // md breakpoint
          mobileMenu?.classList.add('hidden');
        }
      });
    </script>
  </body>
</html>
